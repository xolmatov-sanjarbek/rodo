<% content_for :title, "Todos" %>

<div class="w-full">
  <div class="flex justify-center items-center mb-8">
    <h1 class="font-bold text-6xl">Your Todos</h1>
  </div>

  <div id="todos" class="min-w-full space-y-5">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <div class="flex flex-col sm:flex-row justify-center items-center pb-5 sm:pb-0">
          <%= render "todo", todo: todo %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No todos found.</p>
    <% end %>
  </div>
</div>
